#include <iostream>
using namespace std;
int main() {
    int a[] = {1, 2, 3, 4, 5};
    cout << "Displaying address using array:" << endl;
    for (int i = 0; i < 5; ++i) {
        cout << "&a[" << i << "]=" << &a[i] << endl;
    }
    cout << "Displaying address using pointer:" << endl;
    int* ptr = a;
    for (int i = 0; i < 5; ++i) {
        cout << "Ptr +" << i << " =" << (ptr + i) << endl;
    }
    return 0;
}
